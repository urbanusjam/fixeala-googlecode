<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!--	Placeholders       -->
	<import resource="classpath:ctx/fixeala-placeholders.xml" />
	
	<!--	Datasource / Hibernate         -->
	<import resource="classpath:ctx/fixeala-datasource.xml" />

	<!--	DAO               -->
	<import resource="classpath:ctx/fixeala-dao.xml" />

	<!--	Services          -->
	<import resource="classpath:ctx/fixeala-services.xml" />
	
	<!--	Security          -->
	<import resource="classpath:ctx/fixeala-security.xml" />
	
	<!--	Mail              -->
	<import resource="classpath:ctx/fixeala-mail.xml" />
	
	<!--	Log4j             -->
	<import resource="classpath:ctx/fixeala-log4j.xml" />

</beans>