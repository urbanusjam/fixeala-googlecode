<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.com.urbanusjam.entity.Authority" table="AUTHORITIES" >
    	
    	
        <properties name="user_authority_index" unique="true">
	       	<property name="username" type="java.lang.String" >
	            <column name="USERNAME" length="50" />
	        </property>   
	     
	        <property name="authority" type="java.lang.String" >
	            <column name="AUTHORITY" length="50" />
	        </property>        
		</properties>
        
        <one-to-one name="username" class="ar.com.urbanusjam.entity.User" />

      
    </class>
</hibernate-mapping>